@model DomainBD.Models.PropertyModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">    
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <style>img { display: block; margin-left: auto; margin-right: auto; }</style>
</head>
<body>

    <div class="container">
        <img src="~/images/Millon And Up_white.png" class="img-circle" width="150" height="150">
        <form asp-action="CreateProperty" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-5">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-1" style="background-color:white;">
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label asp-for="Adress" class="control-label"></label>
                        <input asp-for="Adress" class="form-control" />
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-5">
                    <div class="form-group">
                        <label asp-for="Stratum" class="control-label"></label>
                        <input asp-for="Stratum" class="form-control" />
                        <span asp-validation-for="Stratum" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-1" style="background-color:white;">
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label asp-for="YearsConstruction" class="control-label"></label>
                        <input asp-for="YearsConstruction" class="form-control" />
                        <span asp-validation-for="YearsConstruction" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-5">
                    <div class="form-group">
                        <label asp-for="Tax" class="control-label"></label>
                        <input asp-for="Tax" class="form-control" />
                        <span asp-validation-for="Tax" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-1" style="background-color:white;">
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                @*<div class="col-sm-5">
                    <div class="form-group">*@
                        @*<label asp-for="ImagePath" class="control-label"></label>
                        <input asp-for="ImagePath" accept="image/*" class="form-control" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>*@

                        @*<label asp-for="ImageFile" class="control-label"></label>
                        <input asp-for="ImageFile" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>*@
                        @*<img src="@("~/images/"+Model.ImagePath)" asp-append-version="true" width="250px" height="250px" />*@
                    @*</div>
                </div>*@
                <div class="col-sm-1" style="background-color:white;">
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label asp-for="IdOwner" class="control-label"></label>
                        <select asp-for="IdOwner" asp-items="ViewBag.listOwner" class="form-control">
                            <option value="" disabled>-- Select Owner --</option>
                        </select>
                        <span asp-validation-for="IdOwner" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-5">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
 </body>
</html>
