@model DomainBD.Domain.Owner
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
 </head>
<body>

    <h4>Owners Update</h4>
    <div class="container">
        <form asp-action="UpdateOwnerPost">
            <div class="row">
                <div class="col-sm-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="IdOwner"type="hidden" id="IdOwner" />
                    <div class="form-group">
                        <label asp-for="NamesOwner" class="control-label"></label>
                        <input asp-for="NamesOwner" class="form-control" />
                        <span asp-validation-for="NamesOwner" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="Telephone" class="control-label"></label>
                        <input asp-for="Telephone" class="form-control" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label asp-for="AdressOwner" class="control-label"></label>
                        <input asp-for="AdressOwner" class="form-control" />
                        <span asp-validation-for="AdressOwner" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" id="btnSubmit" value="Create" class="btn btn-default" />
            </div>

            @*<div style="text-align:center;display:none" id="loaderDiv">
            <img src="~/images/loading.gif" />
        </div>*@
            <div>
                <a asp-action="ListProperties">Back to List Property</a>
            </div>
        </form>
    </div>
</body>
</html>
